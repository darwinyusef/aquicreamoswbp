    category: 'Mobile'
  },
  {
    slug: 'computer-vision',
    title: 'Computer Vision',
    category: 'IA'
  },
  {
    slug: 'arquitectura',
    title: 'Arquitectura TOGAF 2026',
    category: 'Profesional'
  },
  {
    slug: 'desarrollo-fullstack',
    title: 'Desarrollo Full-Stack',
    category: 'Profesional'
  },
  {
    slug: 'ia-machine-learning',
    title: 'IA & Machine Learning',
    category: 'Profesional'
  },
  {
    slug: 'devops-infraestructura',
    title: 'DevOps & Cloud',
    category: 'Profesional'
  }
];

// Obtener el slug actual de la URL
const currentPath = Astro.url.pathname;
const currentSlug = currentPath.split('/').pop() || '';

// Filtrar otros servicios (excluyendo el actual)
const otrosServicios = todosLosServicios.filter(s => s.slug !== currentSlug).slice(0, 6);
