<style>
  /* Animaci√≥n suave para el icono */
  @keyframes bounce-slow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce-slow {
    animation: bounce-slow 3s ease-in-out infinite;
  }

  /* Estilos para el contenido del art√≠culo */
  article :global(h2) {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    font-size: 2.25rem;
    font-weight: 700;
    color: #82e256;
    line-height: 1.2;
    position: relative;
    padding-bottom: 0.75rem;
  }

  article :global(h2::after) {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 4px;
    background: linear-gradient(to right, #82e256, transparent);
    border-radius: 2px;
  }

  article :global(h3) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.75rem;
    font-weight: 600;
    color: #82e256;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  article :global(h4) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.35rem;
    font-weight: 600;
    color: #88b43c;
  }

  article :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    font-size: 1.125rem;
    color: #e5e5e5;
  }

  article :global(ul),
  article :global(ol) {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    padding: 1.5rem;
    border-radius: 0.5rem;
    border-left: 4px solid #82e256;
  }

  article :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.8;
    color: #d1d5db;
  }

  article :global(li::marker) {
    color: #82e256;
    font-weight: bold;
  }

  article :global(strong) {
    color: #82e256;
    font-weight: 700;
  }

  article :global(em) {
    color: #04ADC0;
    font-style: italic;
  }

  article :global(code) {
    background: linear-gradient(135deg, rgba(130, 226, 86, 0.1), rgba(4, 173, 192, 0.1));
    padding: 0.25rem 0.6rem;
    border-radius: 0.375rem;
    font-size: 0.95em;
    color: #82e256;
    font-family: 'Courier New', monospace;
    border: 1px solid rgba(130, 226, 86, 0.2);
  }

  article :global(pre) {
    background: #0d1117;
    padding: 1.5rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid rgba(130, 226, 86, 0.2);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  article :global(pre code) {
    background: transparent;
    padding: 0;
    color: #e5e5e5;
    border: none;
  }

  article :global(blockquote) {
    border-left: 4px solid #82e256;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #b0b0b0;
    background: rgba(130, 226, 86, 0.05);
    padding: 1.5rem;
    border-radius: 0.5rem;
  }

  article :global(hr) {
    margin: 3rem 0;
    border: none;
    height: 2px;
    background: linear-gradient(to right, transparent, #82e256, transparent);
  }

  article :global(a) {
    color: #04ADC0;
    text-decoration: none;
    font-weight: 600;
    border-bottom: 2px solid transparent;
    transition: border-color 0.3s;
  }

  article :global(a:hover) {
    color: #06d4e8;
    border-bottom-color: #04ADC0;
  }

  article :global(img) {
    border-radius: 0.75rem;
    margin: 2rem 0;
    max-width: 100%;
    height: auto;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
  }

  article :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  article :global(th),
  article :global(td) {
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1rem;
    text-align: left;
  }

  article :global(th) {
    background: linear-gradient(135deg, rgba(130, 226, 86, 0.2), rgba(4, 173, 192, 0.1));
    color: #82e256;
    font-weight: 700;
  }

  article :global(td) {
    color: #d1d5db;
  }

  /* Efectos hover mejorados */
  article :global(ul li:hover),
  article :global(ol li:hover) {
    background: rgba(130, 226, 86, 0.05);
    padding-left: 0.5rem;
    transition: all 0.3s;
  }
</style>
