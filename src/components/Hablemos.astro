          class="flex flex-col gap-3 overflow-y-auto max-h-[650px] pr-2 custom-scrollbar scroll-smooth items-center md:items-start"
        >
          <!-- Los videos se generarán dinámicamente -->
        </div>

        <button
          id="scroll-down"
          class="p-1 text-[#82e256] hover:bg-[#82e256]/20 rounded self-center mt-2"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
