// Blog Section Component
const blogPosts = [
    {
        href: "/blog/agentes-ia-revolucion-empresarial",
        category: "IA",
        categoryColor: "purple-600",
        image: "/img/fondo.png",
        date: "15 de noviembre de 2025",
        title: "Agentes de IA: La Revolución Empresarial que está Transformando el Trabajo",
        description:
            "Descubre cómo los agentes cognitivos están automatizando tareas complejas y mejorando la productividad en las empresas modernas.",
    },
    {
        href: "/blog/react-server-components-guia",
        category: "Web",
        categoryColor: "blue-600",
        image: "/img/fondo.png",
        date: "5 de noviembre de 2025",
        title: "React Server Components: Guía Completa para Desarrolladores",
        description:
            "Todo lo que necesitas saber sobre React Server Components y cómo pueden mejorar el rendimiento de tus aplicaciones.",
    },
    {
        href: "/blog/flutter-vs-react-native-2025",
        category: "Mobile",
        categoryColor: "green-600",
        image: "/img/fondo.png",
        date: "28 de octubre de 2025",
        title: "Flutter vs React Native en 2025: ¿Cuál Elegir para tu Proyecto?",
        description:
            "Comparativa detallada de las dos frameworks más populares para desarrollo móvil multiplataforma.",
    },
    {
        href: "/blog/arquitectura-hexagonal-microservicios",
        category: "Arquitectura",
        categoryColor: "orange-600",
        image: "/img/fondo.png",
        date: "10 de noviembre de 2025",
        title: "Arquitectura Hexagonal: Por qué es la Mejor Opción para Microservicios",
        description:
            "Guía completa sobre cómo implementar arquitectura hexagonal en tus proyectos de microservicios para lograr alta mantenibilidad.",
    },
    {
        href: "/blog/computer-vision-deteccion-objetos",
        category: "IA",
        categoryColor: "purple-600",
        image: "/img/fondo.png",
        date: "20 de octubre de 2025",
        title: "Computer Vision: Implementando Detección de Objetos en Tiempo Real",
        description:
            "Aprende a implementar sistemas de detección de objetos usando YOLO y OpenCV en aplicaciones web.",
    },
