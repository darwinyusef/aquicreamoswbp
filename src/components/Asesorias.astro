      const isTypeSelected = Array.from(radioButtons).some(
        (radio: any) => radio.checked,
      );

      return (
        isNameValid &&
        isEmailValid &&
        isPhoneValid &&
        isDescriptionValid &&
        isTypeSelected
      );
    }

    // Función para actualizar el estado del botón
    function updateSubmitButton() {
      const isValid = validateForm();

      if (submitBtn) {
        if (isValid) {
          // Habilitar botón
          submitBtn.disabled = false;
          submitBtn.classList.remove(
            "bg-gradient-to-r",
            "from-white/20",
            "to-white/10",
            "text-white/0",
            "cursor-not-allowed",
          );
          submitBtn.classList.add(
            "bg-gradient-to-r",
            "from-[#82e256]",
            "to-[#6bc73d]",
            "hover:from-[#6bc73d]",
            "hover:to-[#5ba62e]",
            "text-black",
            "cursor-pointer",
            "transform",
            "hover:scale-105",
            "shadow-lg",
            "hover:shadow-xl",
          );

          // Cambiar icono y texto
          submitBtn.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Enviar Solicitud</span>
          `;
        } else {
          // Deshabilitar botón
          submitBtn.disabled = true;
          submitBtn.classList.remove(
            "bg-gradient-to-r",
            "from-[#82e256]",
            "to-[#6bc73d]",
            "hover:from-[#6bc73d]",
            "hover:to-[#5ba62e]",
            "text-black",
            "cursor-pointer",
            "transform",
            "hover:scale-105",
            "shadow-lg",
            "hover:shadow-xl",
          );
          submitBtn.classList.add(
            "bg-gradient-to-r",
            "from-white/20",
            "to-white/10",
            "text-white/50",
            "cursor-not-allowed",
          );

          // Cambiar icono y texto
          submitBtn.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <span>Completa todos los campos</span>
          `;
        }
      }
    }

    // Actualizar nota de privacidad
    const privacyNote = document.querySelector(
      "p.text-white\\/0",
    ) as HTMLElement;
    if (privacyNote) {
      privacyNote.classList.remove("text-white/0");
      privacyNote.classList.add("text-white/60");
    }

    // Listeners para actualizar el botón
    nameInput?.addEventListener("input", updateSubmitButton);
    emailInput?.addEventListener("input", updateSubmitButton);
    phoneInput?.addEventListener("input", updateSubmitButton);
    descriptionInput?.addEventListener("input", updateSubmitButton);
    radioButtons.forEach((radio) => {
      radio.addEventListener("change", updateSubmitButton);
    });

    // Manejar clic en el botón de envío
    submitBtn?.addEventListener("click", async (e) => {
      e.preventDefault();
      e.stopPropagation();

      console.log("📋 Botón de envío clickeado");

      if (!validateForm()) {
        console.log("❌ Validación falló");
        alert("Por favor completa todos los campos del formulario");
        return;
      }

      console.log("✅ Validación pasó");

      // Recopilar datos del formulario
      const selectedType = Array.from(radioButtons).find(
        (radio: any) => radio.checked,
      ) as HTMLInputElement;
      const formData = {
        name: nameInput.value.trim(),
        email: emailInput.value.trim(),
        phone: phoneInput.value.trim(),
        type: selectedType?.value || "",
        description: descriptionInput.value.trim(),
      };

      console.log("📦 Datos del formulario:", formData);

      // Guardar datos en localStorage para /primera-sesion
      const fullFormData = {
        ...formData,
        timestamp: new Date().toISOString(),
      };
      localStorage.setItem("advisoryFormData", JSON.stringify(fullFormData));

      console.log("✅ Datos guardados en localStorage:", fullFormData);

      // Cambiar botón a estado de carga
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>¡Redirigiendo...</span>
        `;
      }

      // Redirigir a la página de evaluación
      setTimeout(() => {
        console.log("🔄 Redirigiendo a /primera-sesion");
        window.location.href = "/primera-sesion";
      }, 500);
    });

    // Inicializar estado del botón
    updateSubmitButton();

    // === BOTÓN PARA AGENDAR CITA DIRECTA ===
    const directAppointmentBtn = document.getElementById(
      "direct-appointment-btn",
    );
    directAppointmentBtn?.addEventListener("click", () => {
      // Scroll suave hacia el formulario
      advisoryForm?.scrollIntoView({ behavior: "smooth", block: "center" });

      // Resaltar el formulario brevemente
      advisoryForm?.classList.add(
        "ring-2",
        "ring-[#82e256]",
        "ring-offset-2",
        "ring-offset-[#1a1a1a]",
      );
      setTimeout(() => {
        advisoryForm?.classList.remove(
          "ring-2",
          "ring-[#82e256]",
          "ring-offset-2",
          "ring-offset-[#1a1a1a]",
        );
      }, 2000);

      // Enfocar el primer campo
      nameInput?.focus();
    });

    // === BOTONES PARA ABRIR CHAT FLOTANTE ===
    const openChatButtons = [
      document.getElementById("open-floating-chat-asesorias"),
      document.getElementById("open-floating-chat-mentoring"),
    ];

    openChatButtons.forEach((btn) => {
      btn?.addEventListener("click", () => {
        const floatingChatBtn = document.getElementById("floating-chat-btn");
        floatingChatBtn?.click();
      });
    });
  });
</script>
