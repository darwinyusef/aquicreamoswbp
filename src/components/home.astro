    {
      id: "Mus_vwhTCq0", // Video 7
      title: "Docker y Kubernetes",
      thumbnail: "https://img.youtube.com/vi/Mus_vwhTCq0/maxresdefault.jpg",
    },
    {
      id: "gB6WLkSrtJk", // Video 8
