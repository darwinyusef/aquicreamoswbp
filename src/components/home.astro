---
import Header from "./Header.astro";
import HeroSection from "./HeroSection.astro";
import ServiceSection from "./ServiceSection.astro";
import VideoSection from "./VideoSection.astro";
import BlogSection from "./BlogSection.astro";
import TechStackSection from "./TechStackSection.astro";
import "../assets/service-animations.css";
---

<Header currentPage="home" />

<HeroSection />

<main class="bg-[#1a1a1a]">
  <!-- Banderas flotantes -->
  <div
    class="flex flex-col fixed top-20 z-50 right-4 justify-center items-center gap-2"
  >
    <img
      src="/img/banderaColombia.png"
      alt="Bandera Colombia"
      class="w-8 h-6 md:w-12 md:h-9 object-cover cursor-pointer hover:scale-110 transition-transform shadow-lg rounded-sm"
    />
    <img
      src="/img/banderaEstadosUnidos.png"
      alt="Bandera Estados Unidos"
      class="w-8 h-6 md:w-12 md:h-9 object-cover cursor-pointer hover:scale-110 transition-transform shadow-lg rounded-sm"
    />
    <img
      src="/img/banderaBrasil.png"
      alt="Bandera Brasil"
      class="w-8 h-6 md:w-12 md:h-9 object-cover cursor-pointer hover:scale-110 transition-transform shadow-lg rounded-sm"
    />
  </div>

  <!-- Secciones de Servicios -->
  <ServiceSection
    id="personaje1"
    title="Agentes de IA"
    subtitle="Cognitivos, Ventas y Operaciones MCP"
    description="Implementamos chatbots, whatsapp agents, agentes de ventas, soporte y operaciones conectados mediante Model Context Protocol (MCP) que responden multimodalmente. Tu fuerza laboral digital autónoma que entiende, razona y ejecuta."
    linkHref="/servicios/agentes-ia"
    linkText="EXPLORAR AGENTES"
    imagePath="/img/personaje1/"
    imageAlt="Agente IA"
    animationClass="animate-agents"
    backgroundTitle="AGENTES IA"
    imagePosition="left"
  />

  <ServiceSection
    id="personaje3"
    title="IA para Aplicaciones"
    subtitle="Online"
    description="Potencia tus plataformas web y móviles con modelos de lenguaje y visión. Búsqueda semántica, personalización predictiva y experiencias conversacionales integradas."
    linkHref="/servicios/apps-ia"
    linkText="VER SOLUCIONES"
    imagePath="/img/personaje3/"
    imageAlt="Apps IA"
    animationClass="animate-apps"
    backgroundTitle="APPS ONLINE"
    imagePosition="right"
  />

  <ServiceSection
    id="personaje4"
    title="Desarrollo Web"
    subtitle="Moderno & Rápido"
    description="Sitios web ultrarrápidos construidos con Astro y tecnologías de vanguardia. Diseño premium, SEO optimizado y performance inigualable."
    linkHref="/servicios/web"
    linkText="VER PROYECTOS"
    imagePath="/img/personaje4/"
    imageAlt="Modern Web"
    animationClass="animate-web"
    backgroundTitle="WEB <br /> MODERNA"
    imagePosition="left"
  />

  <ServiceSection
    id="personaje5"
    title="Aplicaciones"
    subtitle="Nativas & Cross-Platform"
    description="Apps iOS y Android de alto rendimiento. Experiencias de usuario fluidas, notificaciones push y funcionalidades nativas avanzadas."
    linkHref="/servicios/movil"
    linkText="VER APPS"
    imagePath="/img/personaje5/"
    imageAlt="Apps Móviles"
    animationClass="animate-mobile"
    backgroundTitle="APPS <br /> NATIVAS"
    imagePosition="right"
  />

  <ServiceSection
    id="personaje6"
    title="Arquitectura"
    subtitle="Escalable & Robusta"
    description="Diseñamos sistemas que crecen contigo. Microservicios, serverless y cloud-native para garantizar disponibilidad y seguridad."
    linkHref="/servicios/arquitectura"
    linkText="VER ARQUITECTURA"
    imagePath="/img/personaje6/"
    imageAlt="Arquitectura"
    animationClass="animate-arch"
    backgroundTitle="ARQUITECTURA <br /> DE SOFTWARE"
    imagePosition="left"
  />

  <ServiceSection
    id="personaje7"
    title="Visión"
    subtitle="Artificial"
    description="Análisis de imágenes y video en tiempo real. Detección de objetos, reconocimiento facial y control de calidad automatizado."
    linkHref="/servicios/vision"
    linkText="VER SOLUCIONES"
    imagePath="/img/personaje7/"
    imageAlt="Computer Vision"
    animationClass="animate-vision"
    backgroundTitle="VISIÓN <br /> ARTIFICIAL"
    imagePosition="right"
  />
</main>

<!-- Scripts -->
<script src="../assets/carousel.js"></script>

<!-- Sección de Videos -->
<VideoSection />

<!-- Sección de Blog -->
<BlogSection />

<!-- Sección de Stack Tecnológico -->
<TechStackSection />
