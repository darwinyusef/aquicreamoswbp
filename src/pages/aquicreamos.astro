  // Variable para rastrear el workflow expandido actual
  let currentExpandedWorkflow: number | null = null;

  // Funci√≥n para colapsar un workflow espec√≠fico
  function collapseWorkflow(workflowId: number) {
    const expandedSection = document.getElementById(`expanded-${workflowId}`);
    const chevron = document.querySelector(
      `.chevron-${workflowId}`,
    ) as HTMLElement;
    const article = document.getElementById(
      `workflow-${workflowId}`,
    ) as HTMLElement;

    if (!expandedSection || !chevron || !article) return;

    // Ocultar contenido expandido
    expandedSection.classList.add("hidden");

    // Resetear chevron
    chevron.style.transform = "rotate(0deg)";

    // Limpiar TODOS los estilos inline del article para restaurar estado original
    article.removeAttribute("style");

    // Remover clases adicionales
    article.classList.remove("ring-2", "ring-[#82e256]/50");
  }

  // Funci√≥n para expandir/colapsar workflow
  function toggleWorkflowExpansion(workflowId: number) {
    const expandedSection = document.getElementById(`expanded-${workflowId}`);
    const chevron = document.querySelector(`.chevron-${workflowId}`);
    const article = document.getElementById(
      `workflow-${workflowId}`,
    ) as HTMLElement;

    if (!expandedSection || !chevron || !article) return;

    const isExpanded = !expandedSection.classList.contains("hidden");

    // Si hay otro workflow expandido, colapsarlo primero
    if (
      currentExpandedWorkflow !== null &&
      currentExpandedWorkflow !== workflowId
    ) {
      collapseWorkflow(currentExpandedWorkflow);
    }

    if (isExpanded) {
      // Colapsar - Restaurar completamente al estado original
      collapseWorkflow(workflowId);
      currentExpandedWorkflow = null;
    } else {
      // Expandir - Aumentar tama√±o del article
      expandedSection.classList.remove("hidden");
      chevron.style.transform = "rotate(180deg)";
      article.style.position = "relative";
      article.style.width = "calc(200% + 1.5rem)"; // 2 columnas + gap
      article.style.zIndex = "200";
      article.style.backgroundColor = "rgba(0, 0, 0, 0.4)";
      article.classList.add("ring-2", "ring-[#82e256]/50");

      // Detectar en qu√© columna est√° la card
      // En grid de 3 columnas:
      // - √≠ndice % 3 === 0 -> columna izquierda (0, 3, 6, 9...) -> expandir a la derecha
      // - √≠ndice % 3 === 1 -> columna centro (1, 4, 7, 10...) -> expandir a la izquierda
      // - √≠ndice % 3 === 2 -> columna derecha (2, 5, 8, 11...) -> expandir a la izquierda
      const container = document.getElementById("workflows-container");
      if (container) {
        const cards = Array.from(container.querySelectorAll(".workflow-card"));
        const cardIndex = cards.findIndex(
          (card) => card.id === `workflow-${workflowId}`,
        );

        // Solo la columna izquierda expande a la derecha
        if (cardIndex % 3 === 0) {
          // Columna izquierda - expandir hacia la derecha
          article.style.left = "0";
        } else {
          // Columna centro o derecha - expandir hacia la izquierda
          // Necesita offset negativo para cubrir la card de la izquierda
          article.style.left = "calc(-100% - 1.5rem)";
        }
      }

      currentExpandedWorkflow = workflowId;

      // Scroll suave hacia la card expandida
      setTimeout(() => {
        article.scrollIntoView({ behavior: "smooth", block: "nearest" });
      }, 100);

      // Re-inicializar iconos de Lucide para el contenido expandido
      if (typeof lucide !== "undefined") {
        lucide.createIcons();
      }
    }
  }

  // Hacer la funci√≥n global
  (window as any).toggleWorkflowExpansion = toggleWorkflowExpansion;

