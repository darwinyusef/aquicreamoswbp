  // Funci√≥n para filtrar workflows
  function filterWorkflows(query: string) {
    if (!query) return workflows;

    const lowerQuery = query.toLowerCase();
    return workflows.filter(
      (workflow) =>
        workflow.title.toLowerCase().includes(lowerQuery) ||
        workflow.description.toLowerCase().includes(lowerQuery) ||
        workflow.category.toLowerCase().includes(lowerQuery) ||
        workflow.features.some((f) => f.toLowerCase().includes(lowerQuery)) ||
        workflow.tech.some((t) => t.toLowerCase().includes(lowerQuery)),
    );
  }

