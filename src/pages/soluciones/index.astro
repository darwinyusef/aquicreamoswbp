      title: 'Gu√≠a Marketing y Ventas IA',
      description: 'Marketing y Ventas con IA - Gu√≠a Completa 2025',
      area: 'Marketing y Ventas'
    },
    'calidad': {
      icon: '‚öôÔ∏è',
      title: 'Gu√≠a Calidad y Control IA',
      description: 'Control de Calidad con IA - Gu√≠a Completa 2025',
      area: 'Calidad y Control'
    },
    'finanzas': {
      icon: 'üí∞',
      title: 'Gu√≠a Finanzas Inteligentes',
      description: 'Automatizaci√≥n Financiera con IA - Gu√≠a Completa 2025',
      area: 'Finanzas'
    },
    'inventarios': {
      icon: 'üì¶',
      title: 'Gu√≠a Inventarios Inteligentes',
      description: 'Optimizaci√≥n de Inventarios con IA - Gu√≠a Completa 2025',
      area: 'Inventarios Inteligentes'
    },
    'crm': {
      icon: 'üîÑ',
      title: 'Gu√≠a Integraci√≥n CRM',
      description: 'Integraci√≥n y Sincronizaci√≥n de CRM - Gu√≠a Completa 2025',
      area: 'Integraci√≥n CRM'
    },
    'comunicaciones': {
      icon: 'üîî',
      title: 'Gu√≠a Comunicaciones Multicanal',
      description: 'Automatizaci√≥n de Comunicaciones - Gu√≠a Completa 2025',
      area: 'Comunicaciones Multicanal'
    }
  };

  // Funci√≥n para abrir modal
  function openLeadMagnet(area) {
    const config = leadMagnets[area];
    if (!config) return;

    document.getElementById('modal-icon').textContent = config.icon;
    document.getElementById('modal-title').textContent = config.title;
    document.getElementById('modal-description').textContent = config.description;
    document.getElementById('lead-area').value = config.area;

    document.getElementById('lead-magnet-modal-universal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  // Hacer funci√≥n global para onclick
  window.openLeadMagnet = openLeadMagnet;

  // Cerrar modal al hacer click fuera
  document.getElementById('lead-magnet-modal-universal')?.addEventListener('click', (e) => {
    if (e.target.id === 'lead-magnet-modal-universal') {
      document.getElementById('lead-magnet-modal-universal').classList.add('hidden');
      document.body.style.overflow = 'auto';
    }
  });

  // Submit form
  document.getElementById('lead-form-universal')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(e.target);
    const data = {
      nombre: formData.get('nombre'),
      email: formData.get('email'),
      area: formData.get('area'),
      timestamp: new Date().toISOString()
    };

    console.log('Lead capturado:', data);

    // TODO: Enviar a backend/webhook/n8n
    alert('¬°Gracias! Te hemos enviado la gu√≠a a tu email. Revisa tu bandeja de entrada.');

    document.getElementById('lead-magnet-modal-universal').classList.add('hidden');
    document.body.style.overflow = 'auto';
    e.target.reset();
  });

  // Botones de descarga de las cards
  document.addEventListener('DOMContentLoaded', () => {
    const cardDownloadBtns = document.querySelectorAll('.download-card-btn');

    cardDownloadBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation(); // Evitar que se active el link de la card

        const solucion = btn.getAttribute('data-solucion');

        // Mapeo de nombres de soluci√≥n a las keys del modal
