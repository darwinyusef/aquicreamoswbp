          'ecommerce': 'ecommerce',
          'recursos-humanos': 'rrhh',
          'atencion-cliente': 'atencion-cliente',
          'marketing-ventas': 'marketing',
          'calidad-control': 'calidad',
          'finanzas-inteligentes': 'finanzas',
          'inventarios-inteligentes': 'inventarios',
          'integracion-crm': 'crm',
          'comunicaciones-multicanal': 'comunicaciones'
        };

        const modalKey = solucionMap[solucion] || solucion;

        // Llamar a la funci√≥n global del modal
        if (typeof window.openLeadMagnet === 'function') {
          window.openLeadMagnet(modalKey);
        } else {
          console.error('Modal function not found');
        }
      });
    });
  });
</script>
