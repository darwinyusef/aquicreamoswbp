<style>
  /* Animaci√≥n del icono de descarga en las cards */
  .download-icon {
    filter: brightness(0);
    transition: transform 0.3s ease;
  }

  .download-card-btn:hover .download-icon {
    animation: download-bounce 0.6s ease-in-out infinite;
  }

  @keyframes download-bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(4px);
    }
  }

  /* Animaci√≥n cuando se hace clic */
  .download-card-btn:active {
    transform: scale(0.95);
  }

  .download-card-btn:active .download-icon {
    animation: download-pulse 0.3s ease;
  }

  @keyframes download-pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
  }
</style>

<script>
  // Configuraci√≥n de lead magnets
  const leadMagnets = {
    'ecommerce': {
      icon: 'üõí',
      title: 'Gu√≠a E-commerce con IA',
      description: 'Automatizaci√≥n de E-commerce con IA - Gu√≠a Completa 2025',
      area: 'E-commerce'
    },
    'rrhh': {
      icon: 'üë•',
      title: 'Gu√≠a Recursos Humanos IA',
      description: 'Automatizaci√≥n de RRHH con IA - Gu√≠a Completa 2025',
      area: 'Recursos Humanos'
    },
    'atencion-cliente': {
      icon: 'üìû',
      title: 'Gu√≠a Atenci√≥n al Cliente IA',
      description: 'Atenci√≥n al Cliente con IA - Gu√≠a Completa 2025',
