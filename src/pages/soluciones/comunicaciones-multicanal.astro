<style>
  .stack-container { display: flex; flex-direction: column; }
  .sticky-section { position: sticky; top: 0; height: 100vh; display: flex; align-items: center; justify-content: center; overflow: hidden; background-color: #0e0e0e; transition: transform 0.1s linear, filter 0.1s linear; will-change: transform, filter; }
  .sticky-section:nth-child(1) { background-color: #0e0e0e; }
  .sticky-section:nth-child(2) { background-color: #161616; }
  .sticky-section:nth-child(3) { background-color: #1d1d1d; }
  .sticky-section:nth-child(4) { background-color: #0e0e0e; }
  .sticky-section:nth-child(5) { background-color: #161616; }
  .sticky-section:nth-child(6) { background-color: #1d1d1d; }
  .content-grid { display: grid; grid-template-columns: 1fr 1fr; width: 90%; max-width: 1300px; gap: 60px; align-items: center; }
  .text-side { display: flex; flex-direction: column; padding: 20px; }
  .label { font-weight: 600; text-transform: uppercase; letter-spacing: 2px; color: #82e256; margin-bottom: 10px; }
  .sticky-section h2 { font-size: clamp(2.5rem, 6vw, 5.5rem); line-height: 0.95; margin: 0; font-weight: 900; text-transform: uppercase; color: #fff; }
  p.desc { font-size: 1.2rem; margin-top: 30px; opacity: 0.7; max-width: 450px; line-height: 1.5; color: #fff; }
  .image-side { width: 100%; height: 65vh; border-radius: 15px; overflow: hidden; position: relative; }
  .image-side img { width: 100%; height: 100%; object-fit: cover; display: block; }
  .reversed .text-side { order: 2; }
  .reversed .image-side { order: 1; }
  @media (max-width: 900px) {
    .content-grid { grid-template-columns: 1fr; text-align: center; }
    .image-side { height: 35vh; order: -1 !important; }
    .text-side { align-items: center; padding: 0; }
    p.desc { margin-top: 15px; }
  }
</style>

<script>
  const sections = document.querySelectorAll('.sticky-section');
  window.addEventListener('scroll', () => {
    const viewportHeight = window.innerHeight;
    sections.forEach((section, index) => {
      const rect = section.getBoundingClientRect();
      if (rect.top <= 0) {
        const nextSection = sections[index + 1];
        if (nextSection) {
          const nextRect = nextSection.getBoundingClientRect();
          let progress = 1 - (nextRect.top / viewportHeight);
          progress = Math.max(0, Math.min(1, progress));
          const scale = 1 - (progress * 0.1);
          const brightness = 1 - (progress * 0.6);
          (section as HTMLElement).style.transform = `scale(${scale})`;
          (section as HTMLElement).style.filter = `brightness(${brightness})`;
        }
      } else {
        (section as HTMLElement).style.transform = `scale(1)`;
        (section as HTMLElement).style.filter = `brightness(1)`;
      }
    });
  });
</script>
