<script>
  // Smooth scroll para el menú interno
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll('a[href^="#"]');

    links.forEach((link) => {
      link.addEventListener("click", (e) => {
        const href = link.getAttribute("href");
        if (href && href !== "#") {
          e.preventDefault();
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: "smooth",
              block: "start",
            });
          }
        }
      });
    });

    // Drag-to-scroll para loopers
    const loopers = document.querySelectorAll('.capacidades-looper-track, .stack-agentes-looper-track');

    loopers.forEach(looper => {
      let isDown = false;
      let startX;
      let currentTranslate = 0;
      let prevTranslate = 0;
      let animationID;
      let isDragging = false;

      // Obtener el valor actual de transform
      function getTranslateX() {
        const style = window.getComputedStyle(looper);
        const matrix = new DOMMatrix(style.transform);
        return matrix.m41;
      }

      looper.addEventListener('mousedown', (e) => {
        isDown = true;
        isDragging = false;
        looper.style.cursor = 'grabbing';
        startX = e.pageX;

        // Pausar animación y obtener posición actual
        looper.style.animationPlayState = 'paused';
        prevTranslate = getTranslateX();
        currentTranslate = prevTranslate;
      });

      looper.addEventListener('mouseleave', () => {
        if (isDown) {
          isDown = false;
          looper.style.cursor = 'grab';
          // Reanudar animación
          looper.style.animationPlayState = 'running';
        }
      });

      looper.addEventListener('mouseup', () => {
        isDown = false;
        looper.style.cursor = 'grab';
        // Reanudar animación
        looper.style.animationPlayState = 'running';
      });

      looper.addEventListener('mousemove', (e) => {
        if (!isDown) return;
        e.preventDefault();
        isDragging = true;

        const currentX = e.pageX;
        const diff = currentX - startX;
        currentTranslate = prevTranslate + diff;

        // Aplicar transform directamente
        looper.style.transform = `translateX(${currentTranslate}px)`;
      });

      // Pausar en hover
      looper.addEventListener('mouseenter', () => {
        if (!isDown) {
          looper.style.animationPlayState = 'paused';
        }
      });

      looper.addEventListener('mouseleave', () => {
        if (!isDown) {
          looper.style.animationPlayState = 'running';
        }
      });

      // Cambiar cursor para indicar que es arrastrable
      looper.style.cursor = 'grab';
    });
  });
</script>
