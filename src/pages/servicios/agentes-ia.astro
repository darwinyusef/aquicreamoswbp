---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import SpotlightCard from "../../components/SpotlightCard.astro";
import SimpleCarousel from "../../components/SimpleCarousel.astro";

// Todos los servicios disponibles (excluyendo el actual)
const todosLosServicios = [
  { slug: "aplicaciones-ia", title: "Apps con integraciones hechas a la medida + IA", image: "/img/personaje3/01.png" },
  { slug: "desarrollo-web", title: "Diseño y Desarrollo Web Moderno & Rápido + IA", image: "/img/personaje4/01.png" },
  { slug: "apps-moviles", title: "Aplicaciones Nativas & Cross-Platform", image: "/img/personaje5/01.png" },
  { slug: "computer-vision", title: "Visión por Computadora hecha a la medida. + IA", image: "/img/personaje7/01.png" },
  { slug: "arquitectura", title: "Arquitectura de Software Escalable & Robusta", image: "/img/personaje6/01.png" },
  { slug: "desarrollo-fullstack", title: "Desarrollo Full-Stack", image: "/img/personaje4/01.png" },
  { slug: "ia-machine-learning", title: "Aprendizaje Automático y por refuerzo + Modelos de IA", image: "/img/personaje8/01.png" },
  { slug: "devops-infraestructura", title: "DevOps & Infraestructura Cloud", image: "/img/personaje6/01.png" },
];

// Secciones del menú interno
const secciones = [
  { id: "intro", title: "Introducción" },
  { id: "capacidades", title: "Capacidades" },
  { id: "funcionamiento", title: "Cómo Funciona" },
  { id: "tecnologia", title: "Tecnología" },
];
---

<Layout>
  <Header currentPage="servicios" />

  <div class="min-h-screen bg-[#1a1a1a]">
    <!-- Hero Section -->
    <section
      class="relative flex items-center justify-center bg-hero-pattern bg-repeat w-full min-h-screen bg-[url(/img/fondo.png)] bg-no-repeat bg-cover bg-center"
    >
      <div
        class="absolute inset-0 bg-gradient-to-b from-black/50 to-[#1a1a1a] z-10"
      >
      </div>

      <div class="container mx-auto px-4 py-20 md:py-24 relative z-20">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div class="text-center lg:text-left">
              <h1
                class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black mb-6 leading-tight"
              >
                <span class="text-white drop-shadow-lg">AGENTES COGNITIVOS</span
                >
                <br />
                <span
                  class="text-transparent bg-clip-text bg-gradient-to-r from-[#82e256] to-[#04ADC0] drop-shadow-lg"
                >
                  EMPRESARIALES CON IA
                </span>
              </h1>
              <p
                class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-200 font-light max-w-2xl mt-4 md:mt-6 lg:mt-8 mx-auto lg:mx-0 text-center lg:text-left drop-shadow-md"
              >
                <span class="text-2xl">TRANSFORMA TU OPERACIÓN</span> con empleados
                digitales que trabajan 24/7, nunca duermen y escalan sin costo adicional.
              </p>
            </div>

            <div
              class="relative w-full h-[400px] sm:h-[500px] lg:h-[600px] hidden lg:block"
            >
              <img
                src="/img/personaje1/01.png"
                class="absolute inset-0 w-full h-full object-contain transition-opacity duration-1000 opacity-100"
                alt="Agente de IA"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Content con Sidebar -->
    <section class="py-16 md:py-24 bg-[#1a1a1a]">
      <div class="container mx-auto px-4 md:px-16">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Sidebar Menu -->
            <div class="lg:col-span-1">
              <div class="sticky top-24 space-y-4">
                <div
                  class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-xl p-6 border border-gray-700"
                >
                  <h3
                    class="text-lg font-bold text-white mb-4 flex items-center gap-2"
                  >
                    <svg
                      class="w-5 h-5 text-[#82e256]"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    Contenido
                  </h3>
                  <nav class="space-y-2">
                    {
                      secciones.map((seccion) => (
                        <a
                          href={`#${seccion.id}`}
                          class="block px-4 py-2 text-gray-400 hover:text-[#82e256] hover:bg-white/5 rounded-lg transition-all text-sm"
                        >
                          {seccion.title}
                        </a>
                      ))
                    }
                  </nav>
                </div>

                <!-- CTA Card -->
                <div
                  class="bg-gradient-to-br from-[#00464e] to-[#d4e256] rounded-xl p-6 shadow-2xl"
                >
                  <h3 class="text-xl font-bold text-white mb-3">
                    ¿Necesitas agentes de IA?
                  </h3>
                  <p class="text-white/90 mb-4 text-sm">
                    Agenda una sesión gratuita de 30 minutos
                  </p>
                  <a
                    href="/#contenido10"
                    class="block w-full text-center px-6 py-3 bg-[#82e256] text-black font-bold rounded-lg hover:bg-[#6bc73d] transition-all duration-300 transform hover:scale-105"
                  >
                    Agendar Ahora
                  </a>
                </div>
              </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-3 space-y-12">
              <!-- Intro -->
              <div id="intro">
                <h2 class="text-3xl md:text-4xl font-bold text-[#82e256] mb-6">
                  Empleados Digitales que Nunca Duermen
                </h2>

                <div
                  class="bg-gradient-to-br from-[#82e256]/10 to-[#04ADC0]/10 p-6 rounded-xl border border-[#82e256]/30 mb-6"
                >
                  <p class="text-gray-300 text-lg">
                    Un <strong class="text-[#82e256]">agente de IA</strong> es como
                    un asistente virtual ultra-inteligente que trabaja para tu empresa
                    las 24 horas del dia, los 7 dias de la semana. Puede responder
                    preguntas de tus clientes, organizar informacion, enviar correos
                    y hacer tareas repetitivas <strong class="text-white"
                      >sin que tengas que hacer nada</strong
                    >. Piensa en el como un empleado incansable que nunca se
                    enferma, no pide vacaciones y aprende cada dia a hacer mejor
                    su trabajo.
                  </p>
                </div>

                <p class="text-gray-300 text-lg mb-4">
                  Imagina tener miembros digitales en tu equipo que nunca
                  duermen, no cometen errores humanos y escalan sin costo
                  adicional. Nuestros agentes cognitivos son sistemas
                  inteligentes que <strong class="text-white"
                    >actuan, deciden y aprenden</strong
                  > de forma autonoma, integrados completamente en tus operaciones.
                </p>

                <div class="my-8">
                  <div
                    class="flex justify-center mb-4"
                  >
                    <img
                      src="/imgfondos/01.jpg"
                      alt="Agente de IA trabajando"
                      class="h-auto max-w-2xl rounded-2xl"
                    />
                  </div>
                  <p class="text-center text-gray-400 text-sm italic">
                    Agentes de IA que trabajan incansablemente por tu negocio
                  </p>
                </div>
              </div>

              <hr class="border-gray-800" />

              <!-- Capacidades -->
              <div id="capacidades">
                <h2 class="text-3xl md:text-4xl font-bold text-[#82e256] mb-6">
                  Cómo Integramos Agentes IA en Tu Negocio
                </h2>
                <p class="text-gray-300 mb-8 text-lg">
                  Desarrollamos agentes que se integran con tus aplicaciones web existentes o nuevas usando MCP
                </p>

                <SimpleCarousel id="capacidades-carousel">
                  <!-- Card 1: Integración con Apps Existentes -->
                  <div
                    class="bg-gradient-to-br from-gray-800/30 to-gray-900/30 p-8 rounded-2xl border border-gray-700 hover:border-[#82e256] transition-all duration-300"
                  >
                    <h3 class="text-2xl font-bold text-white mb-3">
                      Integración con Apps Existentes
                    </h3>
                    <p class="text-gray-300 leading-relaxed mb-4">
                      Conectamos agentes IA a tus aplicaciones web actuales sin necesidad de reescribirlas.
                      Los agentes acceden a tus bases de datos y sistemas mediante <strong class="text-[#82e256]">Model Context Protocol (MCP)</strong>.
                    </p>
                    <div
                      class="mt-6 p-4 bg-[#82e256]/10 rounded-lg border-l-4 border-[#82e256]"
                    >
                      <p class="text-sm text-gray-400">
                        <strong>Ejemplo:</strong> Agente integrado a tu CRM antiguo que lee y actualiza registros automáticamente
                      </p>
                    </div>
                  </div>

                  <!-- Card 2: MCP - Interoperabilidad -->
                  <div
                    class="bg-gradient-to-br from-gray-800/30 to-gray-900/30 p-8 rounded-2xl border border-gray-700 hover:border-[#82e256] transition-all duration-300"
                  >
                    <h3 class="text-2xl font-bold text-white mb-3">
                      MCP: Lee y Escribe en Tus Sistemas
                    </h3>
                    <p class="text-gray-300 leading-relaxed mb-4">
                      <strong class="text-[#82e256]">Model Context Protocol (MCP)</strong> permite que la IA
                      interactúe directamente con bases de datos, APIs y software existente.
                      El agente puede leer datos, ejecutar acciones y actualizar información en tiempo real.
                    </p>
                    <div
                      class="mt-6 p-4 bg-[#82e256]/10 rounded-lg border-l-4 border-[#82e256]"
                    >
                      <p class="text-sm text-gray-400">
                        <strong>Capacidad:</strong> Interoperabilidad total con PostgreSQL, MySQL, APIs REST, Salesforce, etc.
                      </p>
                    </div>
                  </div>

                  <!-- Card 3: Análisis de Viabilidad -->
                  <div
                    class="bg-gradient-to-br from-gray-800/30 to-gray-900/30 p-8 rounded-2xl border border-gray-700 hover:border-[#82e256] transition-all duration-300"
                  >
                    <h3 class="text-2xl font-bold text-white mb-3">
                      Análisis: ¿Puede un Agente Vivir en Tu Proyecto?
                    </h3>
                    <p class="text-gray-300 leading-relaxed mb-4">
                      Analizamos tu aplicación web (existente o nueva) para determinar si un agente IA
                      puede integrarse efectivamente. Evaluamos infraestructura, bases de datos, flujos de trabajo
                      y definimos tareas específicas donde un agente agregaría valor real.
                    </p>
                    <div
                      class="mt-6 p-4 bg-[#82e256]/10 rounded-lg border-l-4 border-[#82e256]"
                    >
                      <p class="text-sm text-gray-400">
                        <strong>Proceso:</strong> Análisis técnico + definición de tareas directas y medibles
                      </p>
                    </div>
                  </div>

                  <!-- Card 4: Desarrollo de Agentes a Medida -->
                  <div
                    class="bg-gradient-to-br from-gray-800/30 to-gray-900/30 p-8 rounded-2xl border border-gray-700 hover:border-[#82e256] transition-all duration-300"
                  >
                    <h3 class="text-2xl font-bold text-white mb-3">
                      Programación de Agentes para Tareas Directas
                    </h3>
                    <p class="text-gray-300 leading-relaxed mb-4">
                      Una vez validada la viabilidad, programamos agentes especializados para tareas como:
                      gestión de chats, presentación de productos, apoyo en ventas, control de calidad.
                      Cada agente se diseña, analiza y desarrolla específicamente para tu operación.
                    </p>
                    <div
                      class="mt-6 p-4 bg-[#82e256]/10 rounded-lg border-l-4 border-[#82e256]"
                    >
                      <p class="text-sm text-gray-400">
                        <strong>Áreas:</strong> Ventas, calidad, interoperabilidad, atención al cliente
                      </p>
                    </div>
                  </div>
                </SimpleCarousel>
              </div>

              <hr class="border-gray-800" />

              <!-- Tecnología -->
              <div id="tecnologia">
                <h2 class="text-3xl md:text-4xl font-bold text-[#82e256] mb-6">
                  Stack Tecnológico para Agentes IA
                </h2>
                <p class="text-gray-300 mb-8 text-lg">
                  Tecnologías que usamos para desarrollo agéntico
                </p>

                <SimpleCarousel id="stack-agentico-carousel">
                  <!-- Orquestación de Agentes -->
                  <div
                    class="bg-gradient-to-br from-gray-800/30 to-gray-900/30 p-10 rounded-2xl border border-gray-700 hover:border-[#82e256] transition-all duration-300"
                  >
                    <h3 class="text-2xl font-bold text-white mb-3">
                      Orquestación de Agentes
                    </h3>
                    <div class="space-y-3">
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">LangChain</p>
                        <p class="text-sm text-gray-400">Framework para desarrollo con LLMs</p>
                      </div>
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">LangGraph</p>
                        <p class="text-sm text-gray-400">Construcción de agentes con flujos complejos</p>
                      </div>
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">LangSmith</p>
                        <p class="text-sm text-gray-400">Observabilidad y debugging de agentes</p>
                      </div>
                    </div>
                  </div>

                  <!-- Modelos y Monitoreo -->
                  <div
                    class="bg-gradient-to-br from-gray-800/30 to-gray-900/30 p-8 rounded-2xl border border-gray-700 hover:border-[#82e256] transition-all duration-300"
                  >
                    <h3 class="text-2xl font-bold text-white mb-3">
                      Modelos GenAI & Monitoreo
                    </h3>
                    <div class="space-y-3">
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">GPT-4, Claude, Gemini</p>
                        <p class="text-sm text-gray-400">Modelos de lenguaje de última generación</p>
                      </div>
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">MLflow</p>
                        <p class="text-sm text-gray-400">Tracking y gestión de agentes GenAI</p>
                      </div>
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">FastMCP</p>
                        <p class="text-sm text-gray-400">Implementación rápida de Model Context Protocol</p>
                      </div>
                    </div>
                  </div>

                  <!-- Automatización y Flujos -->
                  <div
                    class="bg-gradient-to-br from-gray-800/30 to-gray-900/30 p-8 rounded-2xl border border-gray-700 hover:border-[#82e256] transition-all duration-300"
                  >
                    <h3 class="text-2xl font-bold text-white mb-3">
                      Automatización de Flujos
                    </h3>
                    <div class="space-y-3">
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">N8N</p>
                        <p class="text-sm text-gray-400">Workflows y automatizaciones visuales</p>
                      </div>
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">WhatsApp API</p>
                        <p class="text-sm text-gray-400">Integración de agentes con WhatsApp Business</p>
                      </div>
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">Python + JavaScript</p>
                        <p class="text-sm text-gray-400">Lenguajes principales para lógica de agentes</p>
                      </div>
                    </div>
                  </div>

                  <!-- Procesamiento de Voz y APIs -->
                  <div
                    class="bg-gradient-to-br from-gray-800/30 to-gray-900/30 p-8 rounded-2xl border border-gray-700 hover:border-[#82e256] transition-all duration-300"
                  >
                    <h3 class="text-2xl font-bold text-white mb-3">
                      Voz y APIs Backend
                    </h3>
                    <div class="space-y-3">
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">Whisper</p>
                        <p class="text-sm text-gray-400">Speech-to-Text para agentes de voz</p>
                      </div>
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">Google TTS</p>
                        <p class="text-sm text-gray-400">Text-to-Speech para respuestas de audio</p>
                      </div>
                      <div class="bg-[#82e256]/10 p-3 rounded-lg">
                        <p class="font-semibold text-white">FastAPI</p>
                        <p class="text-sm text-gray-400">APIs de alto rendimiento para agentes</p>
                      </div>
                    </div>
                  </div>
                </SimpleCarousel>
              </div>

              <hr class="border-gray-800" />

              <!-- CTA Final -->
              <div
                class="bg-gradient-to-br from-[#00464e] to-[#d4e256] p-8 md:p-12 rounded-2xl text-center mt-12"
              >
                <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">
                  ¿Listo para agentes cognitivos en tu empresa?
                </h3>
                <p class="text-xl text-white/90 mb-8">
                  Agenda una consultoría gratuita de 30 minutos
                </p>
                <a
                  href="/#contenido10"
                  class="inline-flex items-center gap-2 px-10 py-5 bg-[#82e256] text-black font-bold rounded-xl hover:bg-[#6bc73d] transition-all duration-300 transform hover:scale-105 shadow-2xl text-lg"
                >
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                  </svg>
                  Solicitar Consultoría Gratuita
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Más Servicios -->
    <section class="py-20 bg-gradient-to-b from-[#1a1a1a] to-[#0a0a0a]">
      <div class="container mx-auto px-4 md:px-16">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
              Otros Servicios Tecnológicos
            </h2>
            <p class="text-gray-400 text-lg">
              Soluciones complementarias para tu estrategia tecnológica
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {
              todosLosServicios.map((servicio) => (
                <SpotlightCard
                  href={`/servicios/${servicio.slug}`}
                  className="group"
                >
                  <img src={servicio.image} alt={servicio.title} class="w-16 h-16 mb-4 object-contain" />
                  <h3 class="text-lg font-bold text-white group-hover:text-[#82e256] transition-colors">
                    {servicio.title}
                  </h3>
                  <div class="flex items-center gap-2 text-gray-400 text-sm mt-4">
                    <svg
                      class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                    <span>Ver mas</span>
                  </div>
                </SpotlightCard>
              ))
            }
          </div>

          <div class="mt-12 text-center">
            <a
              href="/servicios"
              class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-[#82e256] to-[#6bc73d] hover:from-[#6bc73d] hover:to-[#5ba62e] text-black font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                ></path>
              </svg>
              Ver Todos los Servicios
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Footer -->
  <Footer />
</Layout>

<style>
  /* Smooth scroll */
  html {
    scroll-behavior: smooth;
  }

  /* Estilos globales mejorados */
  h2 {
    scroll-margin-top: 100px;
  }
</style>

<script>
  // Smooth scroll para el menú interno
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll('a[href^="#"]');

    links.forEach((link) => {
      link.addEventListener("click", (e) => {
        const href = link.getAttribute("href");
        if (href && href !== "#") {
          e.preventDefault();
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: "smooth",
              block: "start",
            });
          }
        }
      });
    });
  });
</script>
