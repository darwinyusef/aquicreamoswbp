---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

// Obtener todos los archivos markdown de podcast
const podcastFiles = await Astro.glob('./*.md');

// Procesar y ordenar por fecha
const podcasts = podcastFiles
  .map(file => ({
    slug: file.url?.split('/').pop() || '',
    title: file.frontmatter.title,
    description: file.frontmatter.description,
    date: file.frontmatter.date,
    readTime: file.frontmatter.readTime,
    image: file.frontmatter.image,
    author: file.frontmatter.author || 'Equipo Aquí Creamos',
    audioUrl: file.frontmatter.audioUrl
  }))
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

// Formatear fecha
const formatDate = (dateString: string) => {
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: 'long', day: 'numeric' };
  return new Date(dateString).toLocaleDateString('es-ES', options);
};
---

<Layout>
  <Header currentPage="podcast" />

  <!-- Main Content -->
  <section class="py-16 bg-[#1a1a1a] min-h-screen">
    <div class="container mx-auto px-4 md:px-16">
      <!-- Hero Section -->
      <div class="mb-16 text-center">
        <div class="inline-flex items-center gap-3 mb-6">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-[#82e256] to-[#6bc73d] flex items-center justify-center shadow-xl">
            <svg class="w-9 h-9 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
            </svg>
          </div>
        </div>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-black text-white mb-6 leading-tight">
          Nuestro <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#82e256] to-[#6bc73d]">Podcast</span>
        </h1>
        <p class="text-xl md:text-2xl text-white/80 max-w-3xl mx-auto leading-relaxed">
          Conversaciones sobre tecnología, desarrollo de software, IA y el futuro de la programación
        </p>
      </div>

      <!-- Episodio Destacado -->
      {podcasts.length > 0 && (
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-white mb-8 flex items-center gap-3">
            <span class="text-[#82e256]">★</span>
            Episodio Destacado
          </h2>
          <article class="bg-gradient-to-br from-purple-900/40 to-purple-800/40 rounded-2xl overflow-hidden border-2 border-purple-500/30 hover:border-purple-500 transition-all duration-300 group">
            <div class="grid md:grid-cols-2 gap-0">
              <div class="relative overflow-hidden aspect-video md:aspect-auto">
                <img
                  src={podcasts[0].image}
                  alt={podcasts[0].title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                  <div class="w-20 h-20 rounded-full bg-[#82e256] flex items-center justify-center shadow-2xl">
                    <svg class="w-10 h-10 text-black ml-1" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"></path>
                    </svg>
                  </div>
                </div>
                <div class="absolute top-4 right-4">
                  <span class="bg-purple-600 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg">
                    Podcast
                  </span>
                </div>
              </div>
              <div class="p-8 md:p-12 flex flex-col justify-center">
                <div class="flex items-center gap-4 text-gray-400 text-sm mb-4">
                  <span class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    {formatDate(podcasts[0].date)}
                  </span>
                  <span class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    {podcasts[0].readTime}
                  </span>
                </div>
                <h3 class="text-3xl md:text-4xl font-bold text-white mb-4 group-hover:text-[#82e256] transition-colors">
                  {podcasts[0].title}
                </h3>
                <p class="text-lg text-gray-300 mb-6 line-clamp-3">
                  {podcasts[0].description}
                </p>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-400">{podcasts[0].author}</span>
                  <a
                    href={`/podcast/${podcasts[0].slug}`}
                    class="inline-flex items-center gap-2 px-6 py-3 bg-[#82e256] text-black font-bold rounded-lg hover:bg-[#6bc73d] transition-all duration-300 transform hover:scale-105"
                  >
                    Escuchar ahora
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </article>
        </div>
      )}

      <!-- Título de todos los episodios -->
      <h2 class="text-3xl font-bold text-white mb-8">
        Todos los episodios
      </h2>

      <!-- Grid de podcasts -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {podcasts.map((podcast) => (
          <article
            class="podcast-card bg-gray-800/50 rounded-xl overflow-hidden hover:transform hover:scale-105 transition-all duration-300 border border-gray-700 hover:border-[#82e256] group"
          >
            {/* Imagen */}
            <div class="relative overflow-hidden aspect-video">
              <img
                src={podcast.image}
                alt={podcast.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                <div class="w-16 h-16 rounded-full bg-[#82e256] flex items-center justify-center">
                  <svg class="w-8 h-8 text-black ml-1" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"></path>
                  </svg>
                </div>
              </div>
              <div class="absolute top-4 right-4">
                <span class="bg-purple-600 text-white px-3 py-1 rounded-full text-xs font-semibold">
                  Podcast
                </span>
              </div>
            </div>

            {/* Contenido */}
            <div class="p-6">
              {/* Metadata */}
              <div class="flex items-center gap-4 text-gray-400 text-sm mb-3">
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  {formatDate(podcast.date)}
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {podcast.readTime}
                </span>
              </div>

              {/* Título */}
              <h2 class="text-xl font-bold text-white mb-3 line-clamp-2 group-hover:text-[#82e256] transition-colors">
                {podcast.title}
              </h2>

              {/* Descripción */}
              <p class="text-gray-300 mb-4 line-clamp-3">
                {podcast.description}
              </p>

              {/* Autor y botón */}
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-400">{podcast.author}</span>
                <a
                  href={`/podcast/${podcast.slug}`}
                  class="inline-flex items-center gap-2 text-[#82e256] font-semibold hover:gap-3 transition-all"
                >
                  Escuchar
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- CTA Newsletter -->
      <div class="mt-20 max-w-4xl mx-auto p-8 md:p-12 bg-gradient-to-br from-[#00464e] to-[#006064] rounded-2xl text-center">
        <div class="flex items-center justify-center mb-4">
          <svg class="w-12 h-12 text-[#82e256]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
          </svg>
        </div>
        <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Suscríbete al podcast
        </h3>
        <p class="text-lg text-white/90 mb-8">
          Recibe notificaciones de nuevos episodios sobre tecnología, IA y desarrollo
        </p>
        <div class="flex flex-col md:flex-row gap-4 max-w-xl mx-auto">
          <input
            type="email"
            placeholder="tu@email.com"
            class="flex-1 px-6 py-4 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/60 focus:outline-none focus:border-[#82e256] text-lg"
          />
          <button class="px-8 py-4 bg-[#82e256] text-black font-bold rounded-lg hover:bg-[#6bc73d] transition-all duration-300 transform hover:scale-105 text-lg">
            Suscribirme
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .aspect-video {
    aspect-ratio: 16 / 9;
  }
</style>
